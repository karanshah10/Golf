<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/orangeDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BigButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/btn_vertical_padding</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BigTextGrey">
        <item name="android:textColor">@color/blackHint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Large">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">@dimen/margin5</item>
        <item name="android:paddingLeft">@dimen/margin5</item>
    </style>

    <style name="Button.Small.OrangeBigRoundCornerLight">
        <item name="android:background">@drawable/button_orangelight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Small.OrangeBigRoundCorner">
        <item name="android:background">@drawable/button_orange_big</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Small.OrangeSmallRoundCorner">
        <item name="android:background">@drawable/button_orange_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Small.BlackBigRoundCorner">
        <item name="android:background">@drawable/button_black_big</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Button.Small.BlackSmallRoundCorner">
        <item name="android:background">@drawable/button_black_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Large.Orange">
        <item name="android:background">@drawable/button_orange_big</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Button.Small.Grey1">
        <item name="android:background">@drawable/button_gray_big</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Small.Grey">
        <item name="android:background">@drawable/button_gray_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.White">
        <item name="android:textColor">@color/blackDark</item>
    </style>
</resources>
